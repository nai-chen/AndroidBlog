<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/poetry"
            android:layout_margin="10dp"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/tv_lending_margin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/green"/>
        <TextView
            android:id="@+id/tv_lending_margin2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/tv_bullet_span1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/green"/>
        <TextView
            android:id="@+id/tv_bullet_span2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/tv_quota_span1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/green"/>
        <TextView
            android:id="@+id/tv_quota_span2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/tv_drawable_margin_span1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/green"/>
        <TextView
            android:id="@+id/tv_drawable_margin_span2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/tv_icon_margin_span1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/green"/>
        <TextView
            android:id="@+id/tv_icon_margin_span2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/green"/>

        <TextView
            android:id="@+id/tv_complex_span1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/green"/>
    </LinearLayout>
</ScrollView>