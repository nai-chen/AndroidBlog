<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_show1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show1"/>
        <Button
            android:id="@+id/btn_show2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show2"/>
    </LinearLayout>

    <ViewStub
        android:id="@+id/vs_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/vs_view1_inflate"
        android:layout="@layout/viewstub_inflate"/>

    <ViewStub
        android:id="@+id/vs_view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inflatedId="@+id/vs_view2_inflate"
        android:layout="@layout/viewstub_inflate"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bottom"/>

</LinearLayout>