<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/btn_toast_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toast_normal" />

    <Button
        android:id="@+id/btn_toast_gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toast_gravity" />

    <Button
        android:id="@+id/btn_toast_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toast_custom" />

    <Button
        android:id="@+id/btn_toast_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toast_cancel" />

</LinearLayout>